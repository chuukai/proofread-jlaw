        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawId="329061" AmendLawNum="昭和二九年四月二日法律第六一号" Extract="true" Id="4b9d4d54-47dd-11e5-8dc7-f3c777a34420">
